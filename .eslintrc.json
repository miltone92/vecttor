{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next/core-web-vitals", "eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 200,
        "ignorePattern": "d=\"([\\s\\S]*?)\""
      }
    ],
    "no-debugger": "error",
    "no-multiple-empty-lines": "error",
    "react/react-in-jsx-scope": 0,
    "import/no-anonymous-default-export": 0,
    "react/prop-types": 0,
    "arrow-body-style": [
      "error",
      "as-needed",
      {
        "requireReturnForObjectLiteral": false
      }
    ]
  },
  "globals": {
    "process": true
  }
}
